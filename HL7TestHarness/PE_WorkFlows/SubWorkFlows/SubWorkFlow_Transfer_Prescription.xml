<workflows testDataFile="TestData.xml">
    <workflow id="w_TESTNAME" description="Transfer Prescription">
        <message description="Pharmacist Transfers Prescription"  root-element-name="PORX_IN010100CA">
            <request description="Transfer Prescription">
                <Simulator RemoteServerAddr="http://DIS_Server/">
                    <construction>
                        <rule type="transform" description="Transfer Prescription Request message" filename="..\WorkFlow_Lib\Prescription/PrescriptionTransferRequest.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC1-PS1(New Prescription)"/>
                                <param name="profile-sequence" value="v1"/>
                                <param name="patient-description"/>
                                <param name="msg-effective-time"/>
                                <param name="prescription-description" value="Prescription 1"/>
                                <param name="newLocation-description" value="Pharmacy 2"/>
                            </paramList>
                        </rule>
                        <!--Prescription ID of the Rx that is being transfered. -->
                        <rule type="putVariable" description="Last Client Prescription ID" name="ClientPrescriptionID" xpath="descendant-or-self::ns:controlActEvent/ns:subject/ns:supplyRequest/ns:componentOf/ns:actRequest/ns:id/@extension" ns="urn:hl7-org:v3"/>
                    </construction>
                </Simulator>
                <messageProxy>
                    <validation description="Schema Validate">
                        <rule type="schema" description="Message Schema Validation" filename="..\WorkFlow_Lib\schemas\PORX_IN010100CA.xsd" expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                    </validation>
                    <validation description="Format Validate">
                        <rule type="transform" description="Transmission wrapper format Validation" filename="..\WorkFlow_Lib\Common\Validation\CeRx_transmission_wrapper.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="ControlAct wrapper format Validation" filename="..\WorkFlow_Lib\Common\Validation\CeRx_controlAct_wrapper.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="Common Element Validation" filename="..\WorkFlow_Lib\Common\Validation\CeRx_Common_Element_validation.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="Payload Validation" filename="..\WorkFlow_Lib\Common\Validation\Transfer_Rx_Payload_validation.xsl" expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                    </validation>
                    <construction>
                        <rule type="testDataLoad" description="update test data with new data" filename="..\WorkFlow_Lib\Common\Construction\TestDataLoader.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC1-PS1(New Prescription)"/>
                            </paramList>
                            <paramList>
                                <param name="messageType" value="client"/>
                                <param name="profile-sequence" value="(Generated)"/>
                            </paramList>
                        </rule>

                        <rule type="transform" description="Generic Request Transform Message" filename="..\WorkFlow_Lib\Common\Construction\MessageProxy.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC1-PS1(New Prescription)"/>
                            </paramList>
                            <paramList>
                                <param name="profile-sequence" value="(Generated)"/>
                            </paramList>
                        </rule>
                        <!-- Control Act ID for undos (We need the request ControlAct extension for undos).-->
                        <rule type="setVariable" description="Last Request Control Act ID extension" name="LastRequestContorlActID" xpath="descendant-or-self::ns:controlActEvent/ns:id/@extension" ns="urn:hl7-org:v3"/>

                    </construction>
                </messageProxy>
            </request>
            <response description="Transfer Prescription Response">
                <Simulator RemoteServerAddr="">
                    <construction>
                        <rule type="transform" description="Transfer Prescription Response Message" filename="..\WorkFlow_Lib\Prescription/PrescriptionTransferAcceptedResponse.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC4-SS6(Transfer Prescription)"/>
                            </paramList>
                            <paramList>
                                <param name="profile-sequence" value="(Generated)"/>
                            </paramList>
                        </rule>
                    </construction>
                </Simulator>
                <messageProxy>
                    <validation description="Schema Validate" root-element-name="PORX_IN010110CA">
                        <rule type="schema" description="Accepted Response - Schema Validation" filename="..\WorkFlow_Lib\schemas\PORX_IN010110CA.xsd" expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                    </validation>
                    <validation description="Schema Validate" root-element-name="PORX_IN010120CA">
                        <rule type="schema" description="Rejected Response - Schema Validation" filename="..\WorkFlow_Lib\schemas\PORX_IN010120CA.xsd" expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                    </validation>
                    <validation description="System Error Response Check" root-element-name="MCCI_IN000002UV01">
                        <rule type="transform" description="Issue Content Validation" filename="..\WorkFlow_Lib\Common\validation\SystemError_Text.xsl" expectedfile="..\WorkFlow_Lib\Common\validation\expectedResults\EmptyOutputExpected.txt">
                            <paramList name="ProfileData">
                                <param name="SystemErrorsExpected"/>
                                <param name="SystemErrorText"/>
                            </paramList>
                        </rule>
                    </validation>
                    <validation description="Validate Format">
                        <rule type="transform" description="CR transmission wrapper format Validation" filename="..\WorkFlow_Lib\Common\validation\CeRx_transmission_wrapper.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="CeRx control wrapper format Validation" filename="..\WorkFlow_Lib\Common\validation\CeRx_controlAct_wrapper.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="Common Element Validation" filename="..\WorkFlow_Lib\Common\Validation\CeRx_Common_Element_validation.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt"/>
                        <rule type="transform" description="Response Payload Validation" filename="..\WorkFlow_Lib\Common\Validation\AddOrUpdate_Response_AcceptOrReject_validation.xsl"
                            expectedfile="..\WorkFlow_Lib\Common\Validation\expectedResults\EmptyOutputExpected.txt">
                            <paramList name="ProfileData">
                                <param name="ResponseType"/>
                            </paramList>
                        </rule>
                    </validation>
                    <validation description="Issue Validation">
                        <rule type="transform" description="Issue Content Validation" filename="..\WorkFlow_Lib\Common\validation\Issue_Text_validation.xsl" expectedfile="..\WorkFlow_Lib\Common\validation\expectedResults\EmptyOutputExpected.txt">
                            <paramList name="ProfileData">
                                <param name="maxIssueCount"/>
                                <param name="minIssueCount"/>
                                <param name="IssueText"/>
                                <param name="IssueCode"/>
                                <param name="IssuePriority"/>
                                <param name="IssueSeverity"/>
                                <param name="StrickIssueValidation"/>
                            </paramList>
                        </rule>
                    </validation>
                    <construction>
                        <rule type="testDataLoad" description="update test data with new data (ex ID's)" filename="..\WorkFlow_Lib\Common\Construction\TestDataIDLoader.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC1-PS1(New Prescription)"/>
                            </paramList>
                            <paramList>
                                <!-- <param name="recordName" value=""/> -->
                                <param name="profile-sequence" value="(Generated)"/>
                            </paramList>
                        </rule>

                        <!-- Variable to get the prescription id to be used by the dispense. -->
                        <!--                        <rule type="setVariable" description="Prescription ID" name="PrescriptionID" xpath="descendant-or-self::ns:controlActEvent/ns:subject/ns:actRequest/ns:id/@extension" ns="urn:hl7-org:v3"/> -->
                        <rule type="transform" description="Generic Response Transform Message" filename="..\WorkFlow_Lib\Common\Construction\MessageProxy.xsl">
                            <paramList name="ProfileData">
                                <param name="profile-description" value="CP-UC1-PS1(New Prescription)"/>
                            </paramList>
                            <paramList>
                                <param name="profile-sequence" value="(Generated)"/>
                            </paramList>
                        </rule>
                        <!-- Last Record ID's are used by client simulator messages "Add reord Note" to referance the last message sent-->
                        <rule type="setVariable" description="Last Record ID" name="LastRecordID" xpath="descendant-or-self::ns:controlActEvent/ns:subject/ns:actRequest/ns:id[1]/@extension" ns="urn:hl7-org:v3"/>
                        <rule type="setVariable" description="Last Record ID root" name="LastRecordRoot" xpath="descendant-or-self::ns:controlActEvent/ns:subject/ns:actRequest/ns:id[1]/@root" ns="urn:hl7-org:v3"/>
                    </construction>
                </messageProxy>
            </response>
        </message>
    </workflow>
</workflows>
